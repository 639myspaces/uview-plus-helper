{
  "name": "uview-plus-helper",
  "displayName": "uview-plus-helper",
  "publisher": "uview-plus",
  "description": "",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "icon": "public/logo.png",
  "repository": {
    "type": "git",
    "url": "https://gitee.com/my_spaces/uview-plus-helper.git"
  },
  "contributes": {
    "commands": [
      {
        "command": "uview-plus-helper.toggleIntellisense",
        "title": "Toggle uView Plus helper"
      },
      {
        "command": "uview-plus-helper.refreshComponents",
        "title": "Refresh uView Plus Components"
      }
    ],
    "languages": [
      {
        "id": "vue",
        "extensions": [".vue"],
        "aliases": ["Vue", "vue"]
      },
      {
        "id": "html",
        "extensions": [".html"],
        "aliases": ["HTML", "html"]
      }
    ],
    "grammars": [],
    "configuration": {}
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "build": "vsce package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "copy-webpack-plugin": "^13.0.1",
    "eslint": "^9.25.1",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1"
  },
  "volta": {
    "node": "22.20.0"
  }
}
