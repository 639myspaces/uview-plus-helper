{
  "name": "uview-plus-helper",
  "displayName": "uview plus 代码提示助手",
  "publisher": "uview plus",
  "description": "uView Plus helper for Visual Studio Code",
  "version": "1.0.0",
  "license": "MIT",
  "author": {
    "name": "哈哈先生",
    "url": "https://gitee.com/my_spaces/uview-plus-helper.git"
  },
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:vue"
  ],
  "main": "./dist/extension.js",
  "icon": "public/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/639myspaces/uview-plus-helper.git"
  },
  "keywords": [
    "uniapp",
    "uview",
    "uview plus",
    "tnt",
    "vue",
    "extension",
    "vscode"
  ],
  "contributes": {
    "commands": [
      {
        "command": "uview-plus-helper.toggleIntellisense",
        "title": "Toggle uView Plus helper"
      },
      {
        "command": "uview-plus-helper.refreshComponents",
        "title": "Refresh uView Plus Components"
      }
    ],
    "languages": [
      {
        "id": "vue",
        "extensions": [
          ".vue"
        ],
        "aliases": [
          "Vue",
          "vue"
        ]
      },
      {
        "id": "html",
        "extensions": [
          ".html"
        ],
        "aliases": [
          "HTML",
          "html"
        ]
      }
    ],
    "grammars": [],
    "configuration": {
      "type": "object",
      "title": "uview plus 助手",
      "properties": {
        "uview-helper.version": {
          "type": "string",
          "default": "uview plus",
          "description": "选择作用的 uview plus 文档版本",
          "enum": [
            "uview plus"
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "build": "vsce package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "copy-webpack-plugin": "^13.0.1",
    "eslint": "^9.25.1",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1"
  },
  "volta": {
    "node": "22.20.0"
  }
}
