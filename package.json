{
  "name": "uview-plus-helper",
  "displayName": "uview-plus 代码提示助手",
  "publisher": "uview-plus",
  "description": "🚀 一个为 uview-plus  组件库提供智能提示的 VS Code 插件",
  "version": "1.0.0",
  "license": "MIT",
  "author": {
    "name": "哈哈先生",
    "url": "https://gitee.com/my_spaces/uview-plus-helper.git"
  },
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:vue"
  ],
  "main": "./dist/extension.js",
  "icon": "public/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/639myspaces/uview-plus-helper.git"
  },
  "keywords": [
    "uniapp",
    "uview",
    "uview plus",
    "html",
    "vue",
    "extension",
    "vscode"
  ],
  "contributes": {
    "commands": [
      {
        "command": "uview-plus-helper.toggleIntellisense",
        "title": "开启或关闭 uView Plus 智能提示",
        "category": "uView Plus",
        "description": "开启或关闭uView Plus组件的智能提示功能",
        "icon": {
          "light": "public/logo.png",
          "dark": "public/logo.png"
        }
      }
    ],
    "keybindings": [
      {
        "command": "uview-plus-helper.toggleIntellisense",
        "key": "ctrl+shift+u",
        "mac": "cmd+shift+u",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "uview-plus-helper.toggleIntellisense",
          "group": "uview-plus@1"
        }
      ],
      "commandPalette": [
        {
          "command": "uview-plus-helper.toggleIntellisense",
          "when": "editorLangId == vue || editorLangId == html"
        }
      ]
    },
    "languages": [
      {
        "id": "vue",
        "extensions": [
          ".vue"
        ],
        "aliases": [
          "Vue",
          "vue"
        ]
      },
      {
        "id": "html",
        "extensions": [
          ".html"
        ],
        "aliases": [
          "HTML",
          "html"
        ]
      }
    ],
    "grammars": []
  },
  "scripts": {
    "dev": "npm run package",
    "build": "vsce package",
    "push": "vsce publish 1.0.0",
    "patch": "vsce publish patch",
    "minor": "vsce publish minor",
    "major": "vsce publish major",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "copy-webpack-plugin": "^13.0.1",
    "eslint": "^9.25.1",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1"
  },
  "volta": {
    "node": "22.20.0"
  }
}
